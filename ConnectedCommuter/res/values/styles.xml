<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CCCardViewBg" >
        <item name="android:background">@color/cc_cardview_bg_color</item>
    </style>
    
    <style name="CCCardViewTitle" parent="@style/RobotoBold" >
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="CCCardViewSubtext" parent="@style/RobotoRegular" >
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="CCCardViewButton" parent="@style/RobotoRegular" >
        <item name="android:src">@drawable/ic_launcher</item>
    </style>
    
    <style name="MyPointsText" parent="@style/RobotoBold" >
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="CCHeaderText" parent="@style/RobotoRegular">
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="CCLightText" parent="@style/RobotoLight">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="HelveticaNeue" >
        <item name="custom_font">HelveticaNeue</item>
    </style>
    
    <style name="HelveticaNeueLight" >
        <item name="custom_font">HelveticaNeueLight</item>
    </style>
    
    <style name="HelveticaNeueLightItalic" >
        <item name="custom_font">HelveticaNeueLightItalic</item>
    </style>
    
    <style name="HelveticaNeueBold" >
        <item name="custom_font">HelveticaNeueBold</item>
    </style>
    
    <style name="HelveticaNeueBoldItalic" >
        <item name="custom_font">HelveticaNeueBoldItalic</item>
    </style>
    
    <style name="HelveticaNeueMedium" >
        <item name="custom_font">HelveticaNeueMedium</item>
    </style>
    
    <style name="HelveticaNeueUltraLight" >
        <item name="custom_font">HelveticaNeueUltraLight</item>
    </style>
    
    <style name="RobotoBold" >
        <item name="custom_font">RobotoBold</item>
    </style>
    
    <style name="RobotoBlack" >
        <item name="custom_font">RobotoBlack</item>
    </style>
    
    <style name="RobotoLight" >
        <item name="custom_font">RobotoLight</item>
    </style>
    
    <style name="RobotoRegular" >
        <item name="custom_font">RobotoRegular</item>
    </style>

</resources>
