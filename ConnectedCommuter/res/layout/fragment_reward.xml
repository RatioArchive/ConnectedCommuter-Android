<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ratio.common.views.FontableTextView
        style="@style/HelveticaNeueLightItalic"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starbucks" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_signin_btn_icon_dark" 
        android:layout_gravity="center_horizontal"/>

    <com.ratio.common.views.FontableTextView
        style="@style/HelveticaNeueLightItalic"
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/starbucks_description" />
    
    <include
        android:id="@+id/cc_cardview" 
        layout="@layout/cc_cardview"/>

</LinearLayout>
